@model Friend
@{
    ViewBag.Title = "Create new friend";
}
<h2>Add new person</h2>
<form asp-controller="home" asp-action="create" method="Post" class="mt-5">
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="City" asp-items="Html.GetEnumSelectList<Province>()" class="form-select"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary">New</button>
        </div>
    </div>
</form>