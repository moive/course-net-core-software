@model EditFriendModel
@{
    ViewBag.Title = "Edit friend";
    var routePhoto = Model.PhotoExistingRoute != null ? "/img/" + Model.PhotoExistingRoute : "https://loremflickr.com/320/240/peru,girl?random=" + Model.Id;
}
<h2>Edit person</h2>
<form asp-controller="home" asp-action="edit" method="Post" class="mt-5" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    @*we keep hidden  in the Id and path photo existene*@
    <input hidden asp-for="Id"  />
    <input hidden asp-for="PhotoExistingRoute" />
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="City" asp-items="Html.GetEnumSelectList<Province>()" class="form-select">
                <option value="">Select please</option>
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4 offset-4">
            <img src="@routePhoto" asp-append-version="true" alt="" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Return</a>
        </div>
    </div>
</form>